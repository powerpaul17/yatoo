{
  "appId": "com.paultirk.yatoo",
  "directories": {
    "buildResources": "resources"
  },
  "artifactName": "${productName}.${ext}",
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "linux": {
    "target": [
      "AppImage",
      "flatpak"
    ]
  },
  "flatpak": {
    "artifactName": "${productName}-${arch}.${ext}"
  }
}
